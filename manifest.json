{
  "name": "Simplify NY Times",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Reduces NY Times interface to the bare minimum and adds features to some games",
  "homepage_url": "https://simpl.fyi",

  "icons": {
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.nytimes.com/*"],
      "js": ["js/util.js", "js/main.js"],
      "css": ["css/style.css"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["*://*.nytimes.com/games/connections*"],
      "js": ["js/connections.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self'; script-src 'self'; img-src 'self'"
  }
}
